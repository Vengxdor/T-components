---
const url = Astro.url.pathname



interface Items {
  name?: string
  href?: string
  title?: string
}


const AsideItems: Items[] = [
  {
    title: 'Guide'
  },
  {
    name: 'Introduction',
    href: '/docs/introduction',
  },
  {
    title: 'Components'
  },
  {
    name: 'Buttons',
    href: '/docs/components/buttons'
  },
  
]
---

<aside class='w-1/5'>
  <ul class='grid gap-0.5'>
    {AsideItems.map(item => (
      <li>
        {item.href &&
          <a class='ml-4 opacity-70 hover:opacity-90 transition duration-300' class:list={[url === item.href && 'text-purple-600']} href={item.href}>
            â€¢ {item.name}
          </a>
        }
        {item.title &&
          <h3 class='text-xl my-2'>{item.title}</h3>
        }
      </li>
    ))}
  </ul>
  
</aside>